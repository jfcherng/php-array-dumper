{
    "name": "jfcherng/php-array-dumper",
    "description": "Dump an array into XML, JSON, YAML, etc...",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "beta",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Jack Cherng",
            "email": "jfcherng@gmail.com"
        }
    ],
    "keywords": [
        "JSON",
        "XML",
        "YAML"
    ],
    "autoload": {
        "psr-4": {
            "Jfcherng\\ArrayDumper\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jfcherng\\ArrayDumper\\Test\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.0.2",
        "nicmart/string-template": "~0.1",
        "spatie/array-to-xml": "^3",
        "symfony/yaml": "^5 || ^6"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3",
        "phan/phan": "^5",
        "phpunit/phpunit": "^9",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "config": {
        "platform": {
            "php": "8.0.2"
        },
        "sort-packages": true
    },
    "scripts": {
        "analyze": [
            "phan --color",
            "phpcs --colors -n"
        ],
        "fix": [
            "php-cs-fixer fix --verbose"
        ],
        "test": [
            "phpunit --verbose"
        ]
    }
}
